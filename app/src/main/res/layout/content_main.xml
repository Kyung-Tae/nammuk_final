<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kennethelee.nammuk_app.MainActivity"
    tools:showIn="@layout/app_bar_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/pig"
        app:layout_constraintTop_toTopOf="@+id/dynamicArcView"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/dynamicArcView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/dynamicArcView"
        app:layout_constraintBottom_toBottomOf="@+id/dynamicArcView"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="146dp"
        android:layout_height="155dp"
        android:layout_marginEnd="3dp"
        app:srcCompat="@mipmap/thinkballoon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-3dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.965" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="48dp"
        app:srcCompat="@mipmap/burger"
        app:layout_constraintTop_toTopOf="@+id/imageView17"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView17"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView17"
        app:layout_constraintHorizontal_bias="0.662" />



    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LeftKcal"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:layout_marginStart="7dp"
        app:layout_constraintRight_toLeftOf="@+id/dynamicArcView"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SpentKcal"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toRightOf="@+id/dynamicArcView"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="3dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PigKcal"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        android:layout_marginEnd="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/dynamicArcView"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/dynamicArcView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/dynamicArcView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_food"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@android:color/holo_blue_light"
        app:fabSize="mini"
        app:srcCompat="@mipmap/dish"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dynamicArcView"
        android:layout_marginRight="33dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_exer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@android:color/holo_green_light"
        app:fabSize="mini"
        app:srcCompat="@mipmap/weightlifting1"
        android:layout_marginStart="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.721"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/textPercentage" />

    <TextView
        android:id="@+id/textPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/KcalPercent"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dynamicArcView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <com.hookedonplay.decoviewlib.DecoView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dynamicArcView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="146dp"
        custom:dv_lineWidth="26dp"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toRightOf="parent"
        custom:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
