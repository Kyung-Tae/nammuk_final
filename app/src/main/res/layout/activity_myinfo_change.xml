<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="?attr/colorPrimary"
        android:backgroundTint="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="165dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/MyInfoChange"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/button_myinfochange_cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="88dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/transparent"
        android:text="@string/Cancel"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintLeft_toLeftOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/Userimage"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginBottom="74dp"
        android:layout_marginTop="77dp"
        android:contentDescription="@string/UserName"
        app:layout_constraintBottom_toBottomOf="@+id/change_nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView25"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/myinfochange_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:text="@string/Nickname"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/change_nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/change_nickname"
        android:layout_width="222dp"
        android:layout_height="43dp"
        android:layout_marginBottom="67dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/wrap_blackborder"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text="@string/UserName"
        app:layout_constraintBottom_toTopOf="@+id/change_age"
        app:layout_constraintLeft_toRightOf="@+id/myinfochange_nickname"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/myinfochange_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Sex"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/myinfochange_age"
        android:layout_marginStart="48dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp" />

    <TextView
        android:id="@+id/myinfochange_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Age"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/myinfochange_sex"
        app:layout_constraintBaseline_toBaselineOf="@+id/change_age"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/myinfochange_sex" />

    <TextView
        android:id="@+id/myinfochange_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:text="@string/Height"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/change_height"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/myinfochange_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/Weight"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/change_weight"
        app:layout_constraintRight_toLeftOf="@+id/change_weight"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/button_myinfochange_complete"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/wrap_blackborder"
        android:text="@string/Complete"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/change_age"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/wrap_blackborder"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text="@string/UserAge"
        app:layout_constraintBottom_toTopOf="@+id/change_height"
        app:layout_constraintLeft_toLeftOf="@+id/change_nickname"
        app:layout_constraintRight_toRightOf="@+id/change_nickname"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/change_height"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:background="@drawable/wrap_blackborder"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text="@string/UserHeight"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/change_weight"
        app:layout_constraintRight_toRightOf="@+id/change_age"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/change_age" />

    <EditText
        android:id="@+id/change_weight"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:background="@drawable/wrap_blackborder"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text="@string/UserWeight"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button_myinfochange_complete"
        app:layout_constraintRight_toRightOf="@+id/change_height"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="21dp"
        app:layout_constraintLeft_toLeftOf="@+id/change_height" />

    <Button
        android:id="@+id/button_myinfochange_imgchange"
        android:layout_width="53dp"
        android:layout_height="44dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/ic_menu_camera"
        android:backgroundTint="#ff6161"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.679"
        app:layout_constraintTop_toTopOf="@+id/Userimage"
        android:layout_marginTop="79dp" />

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="55dp"
        android:orientation="horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/change_age"
        app:layout_constraintRight_toRightOf="@+id/change_nickname"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/change_nickname"
        app:layout_constraintTop_toTopOf="@+id/change_nickname">

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@drawable/wrap_blackborder"
            android:checked="true"
            android:elevation="0dp"
            android:text="@string/Man"
            android:buttonTint="#ff6161" />

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@drawable/wrap_blackborder"
            android:text="@string/Woman"
            android:buttonTint="#ff6161" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
